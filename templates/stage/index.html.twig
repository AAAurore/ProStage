{% extends 'base.html.twig' %}

{% block titrePage %}Liste des stages{% endblock %}

{% block contenuPage %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Activité</th>
                <th>Date de dépot</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stage in stages %}
            <tr>
                <td>{{ stage.id }}</td>
                <td>{{ stage.titre }}</td>
                <td>{{ stage.description }}</td>
                <td>{{ stage.activite }}</td>
                <td>{{ stage.dateDepot ? stage.dateDepot|date('d/m/Y') : '' }}</td>
                <td>
                    <a href="{{ path('stage_show', {'id': stage.id}) }}">Consulter</a>
                    <a href="{{ path('stage_edit', {'id': stage.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun stage enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('stage_new') }}">Créer un nouveau stage</a>
{% endblock %}
