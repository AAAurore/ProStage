{% extends 'base.html.twig' %}

{% block titrePage %}Stage{% endblock %}

{% block contenuPage %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stage.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ stage.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ stage.description }}</td>
            </tr>
            <tr>
                <th>Activite</th>
                <td>{{ stage.activite }}</td>
            </tr>
            <tr>
                <th>DateDepot</th>
                <td>{{ stage.dateDepot ? stage.dateDepot|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('stage_index') }}">Retour à la liste des stages</a>
    <br>
    <a href="{{ path('stage_edit', {'id': stage.id}) }}">Éditer</a>

    {{ include('stage/_delete_form.html.twig') }}
{% endblock %}
